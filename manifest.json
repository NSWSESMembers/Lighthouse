{
  "manifest_version": 2,

  "name": "Lighthouse",
  "short_name": "Lighthouse",
  "description": "Provides multiple enhancements to NSW SES beacon.",
  "version": "2015.12.2.1",
  "icons": {
    "128": "lighthouse128.png",
    "64":"lighthouse64.png"
  },
  "permissions": [
    "storage",
    "https://beacon.ses.nsw.gov.au/",
    "https://trainbeacon.ses.nsw.gov.au/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.ses.nsw.gov.au/Jobs*",
        "https://*.ses.nsw.gov.au/Jobs/"
      ],
      "exclude_matches": [
        "https://*.ses.nsw.gov.au/Jobs/SituationalAwareness",
        "https://*.ses.nsw.gov.au/Jobs/Tasking"
      ],
      "js": ["Jobs/Jobs.js"]
    },
    {
      "matches": ["https://*.ses.nsw.gov.au/Jobs/*"],
      "exclude_matches": [
        "https://*.ses.nsw.gov.au/Jobs",
        "https://*.ses.nsw.gov.au/Jobs/SituationalAwareness",
        "https://*.ses.nsw.gov.au/Jobs/Tasking",
        "https://*.ses.nsw.gov.au/Jobs/"
      ],
      "js": ["Jobs/View.js"]
    },
    {
      "matches": ["https://*.ses.nsw.gov.au/Jobs/Tasking"],
      "js": ["Jobs/Tasking.js"]
    },
    {
      "matches": ["https://*.ses.nsw.gov.au/Jobs/SituationalAwareness"],
      "js": ["Jobs/SituationalAwareness.js"]
    },
    {
      "matches": ["https://*.ses.nsw.gov.au/Account/Login*"],
      "js": [
        "Lighthouse/resources/js/jquery-1.11.3.min.js",
        "Account/Login.js"
      ],
      "css": [
        "Account/Login.css"
      ]
    },
    {
      "matches": ["https://*.ses.nsw.gov.au/Messages/Create"],
      "js": ["Messages/Create.js"]
    },
    {
      "matches": [
        "https://*.ses.nsw.gov.au/Teams/Create",
        "https://beacon.ses.nsw.gov.au/Teams/*/Edit"
      ],
      "js": ["Teams/Edit.js"]
    },
    {
      "matches": ["https://*.ses.nsw.gov.au/Teams/*/Jobs"],
      "js": ["Teams/Jobs.js"]
    },
    {
      "matches": ["https://*.ses.nsw.gov.au/Teams"],
      "js": ["Teams/Teams.js"]
    },
    {
      "matches": ["https://*.ses.nsw.gov.au/*"],
      "exclude_matches": ["https://*.ses.nsw.gov.au/Account/Login*"],
      "js": [
        "Lighthouse/resources/js/jquery-1.11.3.min.js",
        "all/all.js"
      ],
      "css": [
        "all/lighthouse.css"
        ]
    }
  ],
  "web_accessible_resources": [
    "/lighthouse/*",
    "/*/content/*",
    "lighthouse*.png",
    "lh*.png",
    "xmas.png"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
